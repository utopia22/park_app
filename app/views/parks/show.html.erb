<div class="post-show">
  <div class="show-park">
    <p><i class="fa fa-leaf" aria-hidden="true"></i> <%= @park.park_name %></p>
  </div>
  <div class="tag-list">
    <%= raw(@park.tag_list.map { |t| link_to t, tag_path(t) }.join(' ')) %>
  </div>
  <br>
  <div class="post-show-image">
    <%= image_tag @park.image_url(:thumb) if @park.image.present? %>
  </div>
  <br>
  <div class="show-outline">
    <p><%= @park.outline %></p>
  </div>
  <div class="show-locate">
    <p><i class="fa fa-map-marker"></i> 所在地</p>
    <p><%= @park.location %></p>
  </div>
  <div class="show-access">
    <p><i class="fa fa-train"> </i> アクセス</p>
    <p><%= @park.access %></p>
  </div>
  <div class="map-show">
    <p><i class="fa fa-map" aria-hidden="true"> </i> 公園の地図</p>
    <iframe
       src="https://maps.google.co.jp/maps?output=embed&q=<%= @park.location %>&t=m&z=15"
       width="100%"
       height="auto"
       frameborder="0"
       style="border:0"
       allowfullscreen
     >
   </iframe>
   </div>
   <br>
   <br>
   <div class="posts-mark">
   <div id="likes_buttons_<%= @park.id %>">
      <%= render partial: 'likes/like', locals: { park: @park, likes: @likes} %>
   </div>
  </div>

  <br>

  <% if user_signed_in? %>
    <div class="row-actions" id="comment-form-post-<%= @park.id.to_s %>">
       <%= form_with model: [@park, Comment.new], class: "w-100" do |f| %>
         <%= f.hidden_field :user_id, value: current_user.id %>
         <%= f.hidden_field :park_id, value: @park.id %>
        <%= f.text_field :comment, class: "form-control comment-input border-0", placeholder: "レビューする ...", autocomplete: :off %>
      <% end %>
    </div>
  <% else %>
  <p class="post-review">
    <i class="fa fa-angle-double-right"></i><%= link_to "レビューするにはこちらからのログインが必要です。", new_user_session_path %>
  </p>
  <br>
  <br>
  <% end %>

   <ul class="user-tabs">
     <li class="active"><%= link_to("「レビュー」したユーザー", "/parks/#{@park.id}") %></li>
     <li><%= link_to("「いいね！」したユーザー", "/parks/#{@park.id}/likes") %></li>
   </ul>
   <br>
   <% if @comments.present? %>
     <div id="comment-post-<%= @park.id.to_s %>">
       <%= render 'comment_list', { park: @park } %>
     </div>
   <% else %>
     まだレビューはありません。
   <% end %>

   <br>
   <hr>
   <br>
    <div class="ml-auto posts_button">
      <a class="btn btn-outline-info" href="/parks" role="button">公園一覧へ</a>
    </div>

</div>
