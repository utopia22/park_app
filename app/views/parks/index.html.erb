<%= render 'shared/flash_messages' %>
<%= render "shared/search_park" %>
<%= render "shared/modal" %>
<br>
<div class="container">
  <div class="row">
    <% @parks.each do |park| %>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <%= link_to("/parks/#{park.id}") do %>
        <div class="main-contents">
          <div class="main-image">
            <%= image_tag park.image_url(:thumb) if park.image.present? %>
          </div>

          <div class="content-wrapper">
            <div class="park">
              <p><i class="fa fa-leaf" aria-hidden="true"></i> <%= link_to(park.park_name,"/parks/#{park.id}") %></p>
              <p><i class="fa fa-train" aria-hidden="true"></i> <%= park.access %></p>
              <span class="tag-list">
                <%= raw(park.tag_list.map { |t| link_to t, tag_path(t) }.join(' ')) %>
              </span>
            </div>
          </div>

          <div class="posts-mark">
            <div id="likes_buttons_<%= park.id %>">
              <%= render partial: 'likes/like', locals: { park: park, likes: @likes} %>
            </div>
            <div class="comment-list">
              <%= link_to("/parks/#{park.id}") do %>
    ã€€        <span class="fa fa-comment-o fa-lg" aria-hidden="true"></span>
              <% end %>
                <a class="comment-count">
                  <%= park.comments.count %>
                </a>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    <br>
    <% end %>
    <br>
    <%= paginate @parks %>
  </div>
</div>
