<div class="main-users-index">
    <h3 class="users-heading">ユーザー一覧</h3>

    <% @users.each do |user| %>
      <div class="users-index-item">
        
        <div class="user-left">
          <%= image_tag user.image_name.to_s, :size => "60x60" %>
        </div>
        <div class="user-right">
          <%= link_to(user.name, "/users/#{user.id}") %>
        </div>
      </div>
    <% end %>
</div>
