<%= render 'shared/flash_messages' %>
<%= render "shared/search_park" %>

<div class="identify">
  <div class="tags">
    <% @tags.each do |tag| %>
       <%= link_to "#{tag.name}(#{tag.taggings_count})", tag_path(tag.name), class: "label label-default" %>
    <% end %>
  </div>
  <br>
  <div class="my-map">
    <iframe src="https://www.google.com/maps/d/embed?mid=19AFTeknmIahUpgetKNOFbHfPjDuoeEoV&z=13" width="800" height="480"></iframe>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <%= link_to("/posts/#{post.id}") do %>
        <div class="main-contents">
          <div class="main-image">
            <%= image_tag post.image_url(:thumb) if post.image.present? %>
          </div>

          <div class="content-wrapper">
            <div class="park">
              <p><%= link_to(post.park,"/posts/#{post.id}") %></p>
              <p><%= post.access %></p>
              <p><%= raw(post.tag_list.map { |t| link_to t, tag_path(t) }.join(' ')) %></p>
            </div>
          </div>


          <div class="posts-mark">
            <div id="likes_buttons_<%= post.id %>">
              <%= render partial: 'likes/like', locals: { post: post, likes: @likes} %>
            </div>
          </div>


        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
