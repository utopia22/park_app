<div class="d-flex align-items-center btn btn-info">
    <h1>公園一覧</h1>
    <div class="ml-auto posts_button">
        <a class="btn btn-outline-info" href="/posts/new" role="button" class="btn btn-info">投稿</a>
    </div>
</div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead>
    <tr>
      <th scope="col">イメージ</th>
      <th scope="col">公園</th>
      <th scope="col">概要</th>
      <th scope="col">所在地</th>
      <th scope="col">交通アクセス</th>
      <th scope="col">投稿日</th>
      <th scope="col">更新日時</th>
    </tr>
  </thead>
  <tbody>

    <% @posts.each do |post| %>
        <tr>
            <td><%= image_tag post.image_url(:thumb) if post.image.present? %></td>
            <td><%= post.park %></td>
            <td><%= post.outline %></td>
            <td><%= post.location %></td>
            <td><%= post.access %></td>
            <td><%= post.created_at.to_s(:datetime_base) %></td>
            <td><%= post.updated_at.to_s(:datetime_base) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
